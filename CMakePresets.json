{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Configuration",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS":"ON",
        "APH_SHARED": "OFF",
        "APH_ENABLE_TESTING": "OFF",
        "APH_ENABLE_TRACING": "OFF",
        "APH_ENABLE_TSAN": "OFF",
        "APH_ENABLE_ASAN": "OFF",
        "APH_ENABLE_MSAN": "OFF"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "inherits": "default",
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-gcc.cmake"
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "inherits": "default",
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-gcc.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "inherits": "default",
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-clang.cmake"
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "inherits": "default",
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-clang.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build",
      "configurePreset": "default"
    },
    {
      "name": "gcc-release-build",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-debug-build",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "clang-release-build",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-debug-build",
      "configurePreset": "clang-debug"
    }
  ],
  "testPresets": [
    {
      "name": "default-test",
      "configurePreset": "default"
    }
  ]
}
